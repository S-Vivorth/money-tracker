<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.transaction.AddTrans"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.transaction.AddTrans"
        android:id="@+id/main_layout"
        tools:targetApi="m"
        tools:ignore="UnusedAttribute"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="?attr/expenseBgColor"
            android:id="@+id/topLayout"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:id="@+id/appBar"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="18dp"
                android:layout_centerVertical="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/trans"
                android:id="@+id/backBtn"
                android:foreground="?attr/selectableItemBackground"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_back"
                    app:tint="?attr/defaultWhiteText"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:cardCornerRadius="50dp"
                android:id="@+id/chooseWalletLayout"
                app:cardElevation="0dp"
                app:cardBackgroundColor="?attr/secondaryExpenseBgColor"
                >
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:id="@+id/accountLayout"
                    android:foreground="?attr/selectableItemBackground"
                    >

                    <ImageView
                        android:id="@+id/walletIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/ic_all_wallet"
                        android:backgroundTint="?attr/defaultWhiteText" />
                    <TextView
                        android:ellipsize="end"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="@string/personal"
                        style="@style/defaultWhiteText"
                        android:id="@+id/walletName"
                        android:lines="1"
                        android:maxLines="1"
                        android:gravity="center"
                        android:fontFamily="@font/inter_500"
                        app:fontFamily="@font/inter_500"
                        />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow_down"
                    app:tint="?attr/defaultWhiteText" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="?attr/secondaryExpenseBgColor"
            android:id="@+id/deleteLayout"
            android:foreground="?attr/selectableItemBackground"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/white_trash"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        android:id="@+id/layout_chip"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        app:cardCornerRadius="20dp"
        android:background="@color/grey"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/appBar"
        app:cardBackgroundColor="?attr/secondaryExpenseBgColor"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:id="@+id/incomeExpenseLayout"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/secondaryRedBgColor"
                    android:id="@+id/incomeBtn"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:text="@string/income"
                        android:textSize="14sp"
                        android:id="@+id/incomeText"
                        android:textColor="?attr/unselectedIncomeExpenseTextColor"
                        android:fontFamily="@font/inter_500"
                        app:fontFamily="@font/inter_500"                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardBackgroundColor="?attr/tertiaryExpenseBgColor"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    android:elevation="0dp"
                    android:id="@+id/expenseBtn"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:text="@string/expense"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:textColor="?attr/expenseSelectedTextColor"
                        android:id="@+id/expenseText"
                        android:fontFamily="@font/inter_500"
                        app:fontFamily="@font/inter_500"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/topLayout"
            android:orientation="vertical"
            android:id="@+id/mainLayout"
            android:background="?attr/quaternaryBgColor"
            >
            <LinearLayout
                android:foreground="?selectableItemBackground"
                tools:targetApi="m"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingEnd="16dp"
                android:background="?attr/transAmountBgColor"
                tools:ignore="RtlSymmetry,UnusedAttribute"
                android:id="@+id/transAmountLayout"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="28sp"
                        android:textColor="@color/red"
                        android:id="@+id/amountSign"
                        android:text="@string/negative"
                        app:fontFamily="@font/inter_500"
                        android:fontFamily="@font/inter_500"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/currencySymbol"
                        android:gravity="center_vertical"
                        android:textSize="28sp"
                        app:fontFamily="@font/inter_500"
                        android:fontFamily="@font/inter_500"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:textSize="28sp"
                        android:textColor="@color/red"
                        android:id="@+id/amount"
                        app:fontFamily="@font/inter_500"
                        android:fontFamily="@font/inter_500"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/convert_khr"
                    android:layout_gravity="end"
                    android:id="@+id/exchangeRate"
                    android:visibility="gone"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/dynamicLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/separatorColor"
                    android:id="@+id/amountBottomLine"
                    />
                <LinearLayout
                    android:foreground="?selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:id="@+id/chooseCategory"
                    tools:ignore="UnusedAttribute">
                    <androidx.cardview.widget.CardView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:cardCornerRadius="28dp"
                        android:backgroundTint="?attr/tertiaryBgColor"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        app:cardElevation="0dp"

                        >
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_general"
                            android:id="@+id/categoryIcon"
                            android:layout_gravity="center"
                            />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        style="@style/secondaryText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="12dp"
                        android:text="@string/other"
                        android:id="@+id/categoryName"
                        app:fontFamily="@font/inter_500"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/separatorColor"
                    />
                <RelativeLayout
                    android:foreground="?selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:id="@+id/chooseDate"
                    tools:ignore="UnusedAttribute">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/calendar"
                        android:id="@+id/calendarIcon"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        app:tint="?attr/primaryText"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="@string/date"
                        android:layout_toEndOf="@id/calendarIcon"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        style="@style/primaryText"
                        />
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        tools:ignore="RelativeOverlap"
                        app:cardBackgroundColor="@color/transparent"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_stroke_100r"
                            android:id="@+id/dateLayout"
                            android:paddingBottom="4dp"
                            android:paddingTop="4dp"
                            >

                            <TextView
                                android:id="@+id/selectedDate"
                                android:layout_width="wrap_content"
                                android:layout_height="22dp"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:fontFamily="@font/inter_500"
                                android:gravity="center_vertical"
                                android:text="@string/today"
                                android:textColor="@color/primaryGreen"
                                app:fontFamily="@font/inter_500" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/separatorColor"
                    />
                <RelativeLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                    <ImageView
                        android:layout_marginTop="4dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/remark"
                        android:id="@+id/remarkIcon"
                        android:layout_marginStart="16dp"
                        app:tint="?attr/primaryText"
                        />
                    <EditText
                        android:ellipsize="end"
                        android:maxLines="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/yr_remark"
                        android:textSize="14sp"
                        android:textColorHint="?attr/editTextHintTextColor"
                        android:layout_toEndOf="@id/remarkIcon"
                        android:layout_toStartOf="@id/clearRemarkBtn"
                        android:layout_marginStart="12dp"
                        android:layout_centerVertical="true"
                        android:paddingEnd="8dp"
                        android:inputType="textMultiLine"
                        android:id="@+id/remarkEditText"
                        android:background="@drawable/plain_edittext"
                        tools:ignore="RtlSymmetry" />
                    <ImageView
                        android:id="@+id/clearRemarkBtn"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:padding="4dp"
                        android:src="@drawable/cross"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        app:tint="?attr/editTextHintTextColor"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:backgroundTint="@color/light_black_24"
                        />
                </RelativeLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="100dp"
                    app:cardBackgroundColor="?attr/expenseButtonBgColor"
                    app:cardElevation="0dp"
                    android:id="@+id/saveBtnLayout"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="80dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:id="@+id/saveBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:fontFamily="@font/inter_500"
                            android:letterSpacing="0.025"
                            android:paddingVertical="12dp"
                            android:text="@string/save"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            app:fontFamily="@font/inter_500" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
                <FrameLayout
                    android:id="@+id/ad_view_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>
