<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.budget.CreateBudget"
    android:background="?attr/secondaryBgColor"
    >
    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/quaternaryBgColor"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            >
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:id="@+id/backBtnLayout"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/arrow_back"
                    app:tint="?attr/primaryText" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_budget"
                style="@style/primaryText"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/backBtnLayout"
                android:layout_centerVertical="true"
                android:fontFamily="@font/inter_500"
                app:fontFamily="@font/inter_500"
                android:id="@+id/budgetTitle"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="56dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="?attr/doneButtonBgColor"
                app:cardCornerRadius="42dp"
                app:cardElevation="0dp"
                android:id="@+id/saveBtn"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="29dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/check"
                    app:tint="?attr/primaryText"

                    />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/budgetCategoryLayout"
            android:foreground="?attr/selectableItemBackground"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/budget_on"
                android:id="@+id/budgetIcon"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_toEndOf="@id/budgetIcon"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:text="@string/budget_for"
                android:gravity="center_vertical"
                android:id="@+id/budgetForLabel"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_toStartOf="@id/keyboard_arrow_right"
                app:cardCornerRadius="100dp"
                android:layout_marginEnd="4dp"
                android:layout_centerVertical="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/transparent"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/all_categories"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:id="@+id/categoryName"
                    android:fontFamily="@font/inter_500"
                    app:fontFamily="@font/inter_500"
                    android:textColor="?attr/primaryText"
                    />

            </androidx.cardview.widget.CardView>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/keyboard_arrow_right"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:id="@+id/keyboard_arrow_right"
                android:layout_centerVertical="true"
                app:tint="?attr/arrowForwardIconColor"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/separatorColor"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/budgetAmountLayout"
            android:foreground="?attr/selectableItemBackground"

            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/savings_1"
                android:id="@+id/amountIcon"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_toEndOf="@id/amountIcon"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:text="@string/amount"
                android:gravity="center_vertical"
                style="@style/primaryText"
                android:id="@+id/amountLabel"
                />
            <TextView
                android:id="@+id/amountBudget"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/amountArrowForwardIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/hundred_dollar"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:fontFamily="@font/inter_500"
                app:fontFamily="@font/inter_500"
                android:textColor="?attr/primaryText"
                />
            <ImageView
                android:id="@+id/amountArrowForwardIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/keyboard_arrow_right"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:layout_centerVertical="true"
                app:tint="?attr/arrowForwardIconColor"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/separatorColor"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/budgetWalletLayout"
            android:foreground="?attr/selectableItemBackground"

            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/balance_wallet"
                android:id="@+id/walletIcon"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_toEndOf="@id/walletIcon"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:text="@string/wallet"
                android:gravity="center_vertical"
                style="@style/primaryText"
                android:id="@+id/walletLabel"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_toStartOf="@id/arrowRightIcon"
                app:cardCornerRadius="100dp"
                android:layout_marginEnd="4dp"
                android:layout_centerVertical="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/transparent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/all_wallet"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:id="@+id/walletName"
                    android:fontFamily="@font/inter_500"
                    app:fontFamily="@font/inter_500"
                    android:textColor="?attr/primaryText"

                    />
            </androidx.cardview.widget.CardView>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/keyboard_arrow_right"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:layout_centerVertical="true"
                android:id="@+id/arrowRightIcon"
                app:tint="?attr/arrowForwardIconColor"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/separatorColor"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/general_date_range"
                android:id="@+id/periodIcon"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_toEndOf="@id/periodIcon"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:text="@string/period_monthly"
                android:gravity="center_vertical"
                style="@style/primaryText"
                android:id="@+id/periodLabel"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/separatorColor"/>



    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="100dp"
        android:layout_below="@id/topLayout"
        app:cardBackgroundColor="@color/transparent"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/deleteBudgetBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/delete_budget"
            android:textAllCaps="false"
            android:textColor="?attr/redStrokeBtnTextColor"
            android:textSize="16sp"
            android:background="@drawable/rounded_stroke_button_transparent"
            android:stateListAnimator="@null"
            android:fontFamily="@font/inter_500"
            app:fontFamily="@font/inter_500"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            />
    </androidx.cardview.widget.CardView>

</RelativeLayout>

