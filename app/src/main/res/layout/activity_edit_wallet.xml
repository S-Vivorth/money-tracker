<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.wallet.EditWallet"
    android:orientation="vertical"
    android:background="?attr/quaternaryBgColor"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        >
        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:id="@+id/backBtnLayout"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/arrow_back"
                app:tint="?attr/primaryText" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_wallet"
            style="@style/primaryText"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/backBtnLayout"
            android:layout_centerVertical="true"
            android:fontFamily="@font/inter_500"
            app:fontFamily="@font/inter_500"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="56dp"
            android:layout_height="32dp"
            app:cardCornerRadius="42dp"
            android:backgroundTint="@color/primaryBlue"
            app:cardElevation="0dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:id="@+id/saveBtn"
            android:foreground="?attr/selectableItemBackground"

            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/tick"
                app:tint="@color/black"

                />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="12dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/walletIconLayout"
            android:layout_centerVertical="true"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/transparent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primaryBlue"
                android:alpha="0.06"
                android:id="@+id/walletIconChildLayout"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                />

            <ImageView
                android:id="@+id/walletIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_all_wallet"
                android:backgroundTint="@color/primaryBlue" />

        </androidx.cardview.widget.CardView>
        <EditText
            android:background="@drawable/plain_edittext"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_toEndOf="@id/walletIconLayout"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:text="@string/wallet_name"
            android:textSize="20sp"
            android:textAlignment="gravity"
            android:textColor="?attr/titleColor"
            android:id="@+id/walletName"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/separatorColor"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:id="@+id/initialBalanceLayout"
        android:foreground="?attr/selectableItemBackground"
        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="@drawable/savings_1"
            android:backgroundTint="@color/primaryBlue"
            android:id="@+id/balanceIconLayout"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_toEndOf="@id/balanceIconLayout"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:text="@string/balance"
            android:gravity="center_vertical"
            style="@style/primaryText"

            />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_toStartOf="@id/keyboard_arrow_right"
            app:cardCornerRadius="100dp"
            android:layout_marginEnd="4dp"
            android:layout_centerVertical="true"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/transparent"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primaryBlue"
                android:id="@+id/initialBalanceRightLayout"
                android:alpha="0.06"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hundred_dollar"
                    android:id="@+id/balanceText"
                    android:fontFamily="@font/inter_500"
                    app:fontFamily="@font/inter_500"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/keyboard_arrow_right"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:id="@+id/keyboard_arrow_right"
            android:layout_centerVertical="true"
            app:tint="?attr/arrowForwardIconColor"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/separatorColor"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:id="@+id/chooseCurrencyLayout"
        android:foreground="?attr/selectableItemBackground"

        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="@drawable/payments"
            android:backgroundTint="@color/primaryBlue"
            android:id="@+id/currencyIconLayout"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_toEndOf="@id/currencyIconLayout"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:text="@string/usd_us_dollar"
            android:gravity="center_vertical"
            style="@style/primaryText"
            android:id="@+id/currency"
            />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/keyboard_arrow_right"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true"
            app:tint="?attr/arrowForwardIconColor"

            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/separatorColor"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:id="@+id/sharedWithLayout"
        android:foreground="?attr/selectableItemBackground"
        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="@drawable/supervisor_account"
            android:backgroundTint="@color/primaryBlue"
            android:id="@+id/shareWithIconLayout"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_toEndOf="@id/shareWithIconLayout"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:text="@string/shared_with"
            android:gravity="center_vertical"
            style="@style/primaryText"

            />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_toStartOf="@id/arrowRightIcon"
            app:cardCornerRadius="100dp"
            android:layout_marginEnd="4dp"
            android:layout_centerVertical="true"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/transparent"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primaryBlue"
                android:alpha="0.04"
                android:id="@+id/sharedWithRightLayout"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/one_user"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:id="@+id/numberOfSharedUser"
                android:fontFamily="@font/inter_500"
                app:fontFamily="@font/inter_500"
                />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/keyboard_arrow_right"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true"
            android:id="@+id/arrowRightIcon"
            app:tint="?attr/arrowForwardIconColor"

            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/separatorColor"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:foreground="?attr/selectableItemBackground"

        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="@drawable/stars"
            android:backgroundTint="@color/primaryBlue"
            android:id="@+id/setDefaultIconLayout"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_toEndOf="@id/setDefaultIconLayout"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:text="@string/set_as_default"
            android:gravity="center_vertical"
            style="@style/primaryText"

            />
        <com.google.android.material.materialswitch.MaterialSwitch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            app:trackTint="@color/trans"
            app:trackDecorationTint="?attr/disableToggleStrokeColor"
            app:thumbTint="?attr/disableThumbTintColor"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true"
            android:id="@+id/defaultWalletSwitch"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/separatorColor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="8"
        >
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/firstColorLayout"
            android:padding="8dp">
            <androidx.cardview.widget.CardView
                app:cardElevation="0dp"

                android:layout_width="32dp"
                android:layout_height="32dp"
                app:cardCornerRadius="100dp"
                app:cardBackgroundColor="@color/primaryBlue"
                android:id="@+id/firstColor"
                >

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/secondColorLayout"
            android:padding="8dp">
            <androidx.cardview.widget.CardView
                app:cardElevation="0dp"

                android:layout_width="32dp"
                android:layout_height="32dp"
                app:cardCornerRadius="100dp"
                app:cardBackgroundColor="@color/default_og"
                android:id="@+id/secondColor">

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/thirdColorLayout"
            android:padding="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="32dp"

                android:layout_height="32dp"
                app:cardBackgroundColor="@color/vividCerulean"
                app:cardCornerRadius="100dp"
                app:cardElevation="0dp">

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forthColorLayout"
            android:padding="8dp">
            <androidx.cardview.widget.CardView
                app:cardElevation="0dp"

                android:layout_width="32dp"
                android:layout_height="32dp"
                app:cardCornerRadius="100dp"
                app:cardBackgroundColor="@color/illuminating_emerald">

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fifthColorLayout"
            android:padding="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="32dp"
                android:layout_height="32dp"

                app:cardBackgroundColor="@color/maximum_blue_green"
                app:cardCornerRadius="100dp"
                app:cardElevation="0dp">

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sixthColorLayout"
            android:padding="8dp">
            <androidx.cardview.widget.CardView
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:cardCornerRadius="100dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/primaryPurple">

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:id="@+id/expandColorBtn"
            >
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/color"
                />
        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/separatorColor"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="100dp"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/deleteWalletBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/delete_wallet"
            android:textAllCaps="false"
            android:textColor="?attr/redStrokeBtnTextColor"
            android:textSize="16sp"
            android:background="@drawable/stroke_rounded_btn"
            android:stateListAnimator="@null"
            android:fontFamily="@font/inter_500"
            app:fontFamily="@font/inter_500"
            android:foreground="?attr/selectableItemBackgroundBorderless"

            />
    </androidx.cardview.widget.CardView>



</LinearLayout>