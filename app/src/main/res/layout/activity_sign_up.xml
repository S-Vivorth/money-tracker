<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.auth.SignUp"
    android:background="?attr/quaternaryBgColor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="19dp"
        android:layout_marginLeft="19dp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp">
            <include layout="@layout/back_button_layout"
                android:id="@+id/backBtn"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/title"
            android:text="@string/create_yr_acc"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingStart="42dp"
                android:paddingEnd="50dp"
                android:hint="@string/enter_yr_username"
                android:id="@+id/userName"
                android:background="@drawable/rounded_edittext"
                tools:ignore="RtlSymmetry"
                android:autofillHints=""
                android:inputType="text"
                style="@style/editText"

                />
            <ImageView
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/person"
                android:id="@+id/personIcon"
                app:tint="?attr/defaultIconTint"
                />
            <RelativeLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:id="@+id/clearAllBtn"
                android:padding="4dp"
                >

                <ImageView
                    android:id="@+id/crossIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/cross"
                    app:tint="?attr/defaultIconTint" />
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingStart="42dp"
                android:paddingEnd="50dp"
                android:hint="@string/enter_yr_pw"
                android:id="@+id/password"
                android:background="@drawable/rounded_edittext"
                tools:ignore="RtlSymmetry"
                android:autofillHints=""
                android:inputType="textPassword"
                style="@style/editText"

                />
            <ImageView
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/lock"
                android:id="@+id/lockIcon"
                app:tint="?attr/defaultIconTint"
                />
            <RelativeLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:id="@+id/pwVisibilityBtn"
                android:padding="4dp"
                >

                <ImageView
                    android:id="@+id/visibility"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/visible"
                    app:tint="?attr/defaultIconTint" />
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingStart="42dp"
                android:paddingEnd="50dp"
                android:hint="@string/re_enter_pw"
                android:id="@+id/reEnterPw"
                android:background="@drawable/rounded_edittext"
                tools:ignore="RtlSymmetry"
                android:autofillHints=""
                android:inputType="textPassword"
                style="@style/editText"

                />
            <ImageView
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/lock"
                android:id="@+id/reEnterPwLockIcon"
                app:tint="?attr/defaultIconTint"
                />
            <RelativeLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:id="@+id/reEnterPwVisibilityBtn"
                android:padding="4dp"
                >

                <ImageView
                    android:id="@+id/reEnterPwVisibility"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"

                    android:src="@drawable/visible"
                    app:tint="?attr/defaultIconTint" />
            </RelativeLayout>

        </RelativeLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/text_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/you_r_using"
                style="@style/primaryText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/emailText"
                style="@style/primaryText"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/text_user"
                app:layout_constraintTop_toTopOf="@+id/text_user"
                app:layout_constraintBottom_toBottomOf="@+id/text_user"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/to_login"
                style="@style/primaryText"
                app:layout_constraintTop_toBottomOf="@+id/text_user"
                app:layout_constraintStart_toStartOf="@+id/text_user"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="38dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="0dp"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/signup"
                android:id="@+id/signUpBtn"
                android:background="@drawable/rounded_btn_states"
                style="@style/Button"
                app:fontFamily="@font/inter_500"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>