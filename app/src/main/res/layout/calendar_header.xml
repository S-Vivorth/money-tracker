<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calendar_header"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:id="@+id/image_arrow_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:layout_marginStart="48dp"
        android:src="@drawable/navigate_before"
        android:padding="12dp"
        android:background="@drawable/background_state_wallet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/primaryText" />
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_arrow_back"
        app:layout_constraintEnd_toStartOf="@+id/image_arrow_next"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/transparent"
        android:layout_marginHorizontal="10dp"
        android:paddingVertical="4dp"
        android:paddingHorizontal="8dp"
        >
        <TextView
            android:id="@+id/text_select_date"
            style="@style/primaryText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:letterSpacing="0.025"
            android:lineHeight="24sp"
            android:text="@string/twenty_april_2022"
            android:textSize="16sp"
            android:textStyle="normal"
            android:fontFamily="@font/inter_500"
            android:gravity="center"
            android:textColor="?attr/primaryText"
            android:background="@drawable/background_state_wallet"
            />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/image_arrow_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_state_wallet"
        android:src="@drawable/navigate_next"
        app:tint="?attr/primaryText"
        android:layout_marginEnd="48dp"
        android:padding="12dp"
        android:layout_marginVertical="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>