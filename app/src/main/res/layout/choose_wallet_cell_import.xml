<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="?attr/bgColor"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    android:elevation="0dp"
    android:id="@+id/cardLayout"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp"
            android:layout_centerVertical="true"
            android:id="@+id/walletIconLayout"
            android:layout_marginStart="12dp"
            app:cardBackgroundColor="?attr/searchBgColor"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/walletIcon"
                android:layout_gravity="center"
                />
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/walletIconLayout"
            android:layout_centerVertical="true"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginEnd="12dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wallet"
                    android:layout_marginStart="12dp"
                    android:id="@+id/walletName"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/inter_400"
                    app:fontFamily="@font/inter_400"
                    android:textSize="14sp"
                    android:textColor="?attr/primaryText"
                    />
                <ImageView
                    android:visibility="gone"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/dot"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/dropdownBtn"
                    />
            </RelativeLayout>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/check_circle"
                android:id="@+id/walletClick"
                android:layout_gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/separatorColor"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:layout_below="@id/walletIconLayout"

            />
    </RelativeLayout>



</androidx.cardview.widget.CardView>