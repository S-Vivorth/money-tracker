<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="io.paraga.moneytrackerdev.views.bottomSheet.BottomSheetStartDateFragment"
    android:background="?attr/bgColor">
    <include layout="@layout/menu_app_bar"
        android:id="@+id/app_bar"/>
    <RelativeLayout
        android:id="@+id/layout_monday"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="12dp"
        android:background="@drawable/rounded_drawer_while"
        app:layout_constraintTop_toBottomOf="@+id/app_bar"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_monday"
            android:text="@string/monday"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:textColor="?attr/primaryText"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_sunday"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/rounded_drawer_while"
        app:layout_constraintTop_toBottomOf="@+id/layout_monday"
        >
        <TextView
            android:id="@+id/text_sunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sunday"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:textColor="?attr/primaryText"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>