<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="UnusedAttribute">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:weightSum="3"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:orientation="horizontal"
        android:background="?attr/quaternaryBgColor"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            app:cardCornerRadius="100dp"
            app:cardBackgroundColor="@color/redBgColor"
            app:cardElevation="0dp"
            android:id="@+id/saveBtn"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginEnd="8dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/saveText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/inter_500"
                    android:letterSpacing="0.025"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:fontFamily="@font/inter_500" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="100dp"
            app:cardBackgroundColor="?attr/nextButtonBgColor"
            app:cardElevation="0dp"
            android:id="@+id/nextBtn"
            android:foreground="?attr/selectableItemBackground"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/next"
                    android:layout_marginEnd="4dp"
                    android:textColor="?attr/nextButtonTextColor"
                    android:fontFamily="@font/inter_500"
                    app:fontFamily="@font/inter_500"
                    android:id="@+id/nextText"
                    />
                
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow_forward"
                    app:tint="?attr/nextButtonTextColor"
                    android:id="@+id/arrowForwardIcon"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <RelativeLayout
        android:background="?attr/quaternaryBgColor"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/chooseCurrencyBtn"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_marginStart="16dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:cardElevation="0dp">
            <LinearLayout
                android:layout_width="82dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:background="@drawable/rounded_slight_stroke"
                tools:ignore="UnusedAttribute">
                <TextView
                    android:layout_marginStart="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/usd"
                    android:layout_marginEnd="4dp"
                    android:id="@+id/selectedCurrencyName"
                    style="@style/primaryText"
                    />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow_down"
                    app:tint="?attr/primaryText"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/chooseCurrencyBtn"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/hundred_dollar"
                android:textAlignment="textEnd"
                android:textSize="24sp"
                android:textColor="@color/primaryRed"
                android:textStyle="bold"
                android:id="@+id/inputText"
                android:maxLines="1"
                tools:ignore="RtlCompat"
                app:fontFamily="@font/inter_600"
                android:fontFamily="@font/inter_600"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/calculator_exceed_digit"
                style="@style/tertiaryText"
                android:textAlignment="textEnd"
                android:gravity="center_vertical"
                android:textColor="@color/primaryRed"
                android:visibility="gone"
                tools:ignore="RtlCompat"
                android:maxLines="1"
                android:id="@+id/exceedDigitText"
                />
        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="?attr/calculatorBgColor"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recent"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:textColor="@color/neural_6"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:id="@+id/recentCurRecyclerView"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"

            >

        </androidx.recyclerview.widget.RecyclerView>




    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="264dp"
        android:padding="8dp"
        android:orientation="vertical"
        android:background="?attr/calculatorBgColor"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="4"

            >
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:id="@+id/switchBtn"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="?attr/bgColor"
                android:foreground="?attr/selectableItemBackground"
                >

                <TextView
                    android:id="@+id/switchText"
                    style="@style/primaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_500"
                    android:text="@string/income"
                    android:layout_gravity="center"
                    android:textColor="@color/primaryGreen"
                    app:fontFamily="@font/inter_500" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="6dp"
                android:id="@+id/clearAllBtn"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/bgColor"
                >

                <TextView
                    style="@style/largeText"
                    android:textColor="?attr/primaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/c"
                    android:layout_gravity="center"
                    app:fontFamily="@font/inter_500"
                    android:fontFamily="@font/inter_500"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                android:id="@+id/deleteBtn"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardBackgroundColor="?attr/bgColor"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/delete"
                    app:tint="?attr/primaryText"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/plusBtn"
                app:cardElevation="0dp"
                app:cardCornerRadius="6dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/bgColor"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/plus"
                    app:tint="?attr/primaryText"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="4"
            android:layout_marginTop="4dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:id="@+id/noSevenBtn"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/bgColor"

                >

                <TextView
                    style="@style/largeText"
                    android:textColor="?attr/primaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/seven"
                    app:fontFamily="@font/inter_500"
                    android:fontFamily="@font/inter_500"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                android:id="@+id/noEightBtn"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/bgColor"

                >

                <TextView
                    style="@style/largeText"
                    android:textColor="?attr/primaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter_500"
                    android:text="@string/eight"
                    app:fontFamily="@font/inter_500" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="6dp"
                android:id="@+id/noNineBtn"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/bgColor"

                >

                <TextView
                    style="@style/largeText"
                    android:textColor="?attr/primaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/nine"
                    app:fontFamily="@font/inter_500"
                    android:fontFamily="@font/inter_500"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                android:id="@+id/minusBtn"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/bgColor"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/minus"
                    app:tint="?attr/primaryText"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="4"
            android:layout_marginTop="4dp"

            >
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardElevation="0dp"
                app:cardCornerRadius="6dp"
                android:layout_marginEnd="5dp"
                android:id="@+id/noFourBtn"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/bgColor"

                >

                <TextView
                    style="@style/largeText"
                    android:textColor="?attr/primaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/four"
                    app:fontFamily="@font/inter_500"
                    android:fontFamily="@font/inter_500"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                android:layout_marginEnd="5dp"
                android:id="@+id/noFiveBtn"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/bgColor"

                >

                <TextView
                    style="@style/largeText"
                    android:textColor="?attr/primaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/five"
                    app:fontFamily="@font/inter_500"
                    android:fontFamily="@font/inter_500"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardElevation="0dp"
                app:cardCornerRadius="6dp"
                android:layout_marginEnd="5dp"
                android:id="@+id/noSixBtn"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/bgColor"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/six"
                    style="@style/largeText"
                    android:textColor="?attr/primaryText"
                    app:fontFamily="@font/inter_500"
                    android:fontFamily="@font/inter_500"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                android:id="@+id/multiplyBtn"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/bgColor"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/multiplication"
                    app:tint="?attr/primaryText"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="4"
            android:layout_marginTop="4dp"

            >
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardElevation="0dp"
                app:cardCornerRadius="6dp"
                android:layout_marginEnd="5dp"
                android:id="@+id/noOneBtn"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/bgColor"

                >

                <TextView
                    style="@style/largeText"
                    android:textColor="?attr/primaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/one"
                    app:fontFamily="@font/inter_500"
                    android:fontFamily="@font/inter_500"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                android:id="@+id/noTwoBtn"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/bgColor"

                >

                <TextView
                    style="@style/largeText"
                    android:textColor="?attr/primaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/two"
                    app:fontFamily="@font/inter_500"
                    android:fontFamily="@font/inter_500"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="6dp"
                android:id="@+id/noThreeBtn"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/bgColor"

                >

                <TextView
                    style="@style/largeText"
                    android:textColor="?attr/primaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/three"
                    app:fontFamily="@font/inter_500"
                    android:fontFamily="@font/inter_500"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                android:id="@+id/divisionBtn"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/bgColor"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/division"
                    app:tint="?attr/primaryText"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="4"
            android:layout_marginTop="4dp"

            >
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:id="@+id/dotBtn"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/bgColor"

                >

                <TextView
                    style="@style/largeText"
                    android:textColor="?attr/primaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter_500"
                    android:text="@string/dot"
                    app:fontFamily="@font/inter_500" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardElevation="0dp"
                app:cardCornerRadius="6dp"
                android:layout_marginEnd="5dp"
                android:id="@+id/zeroBtn"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/bgColor"

                >

                <TextView
                    style="@style/largeText"
                    android:textColor="?attr/primaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/zero"
                    app:fontFamily="@font/inter_500"
                    android:fontFamily="@font/inter_500"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                android:layout_marginEnd="5dp"
                android:id="@+id/equalBtn"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/bgColor"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/equal"
                    app:tint="?attr/primaryText"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="?attr/expenseButtonBgColor"
                android:id="@+id/doneBtn"
                android:foreground="?attr/selectableItemBackground"

                >

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tickIcon"
                    android:layout_centerInParent="true"
                    android:src="@drawable/tick" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>