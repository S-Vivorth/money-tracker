<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.transaction.ChooseDateFrag"
    android:background="?attr/bgColor"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <ImageView
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/closeBtn"
            android:src="@drawable/cross"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:padding="8dp"
            app:tint="?attr/primaryText"
            />

        <TextView
            android:id="@+id/selectedDate"
            style="@style/secondaryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/inter_500"
            android:text="@string/feb_2022"
            app:fontFamily="@font/inter_500" />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            app:cardBackgroundColor="?attr/doneButtonBgColor"
            >
            <RelativeLayout
                android:foreground="?attr/selectableItemBackground"
                android:id="@+id/doneBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                tools:ignore="UnusedAttribute"
                >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/check"
                    app:tint="?attr/nextButtonTextColor"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:weightSum="3"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/transparent"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:foreground="?attr/selectableItemBackground"
                android:background="@drawable/rounded_yesterday_layout"
                android:id="@+id/yesterdayLayout"
                tools:ignore="UnusedAttribute">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/inter_500"
                    android:text="@string/yesterday"
                    android:textColor="?attr/yesterdayTextColor"
                    app:fontFamily="@font/inter_500" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/transparent"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/rounded_date_layout"
                android:id="@+id/todayLayout"
                android:foreground="?attr/selectableItemBackground"
                tools:ignore="UnusedAttribute">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/inter_500"
                    android:text="@string/today"
                    android:textColor="?attr/todayTextColor"
                    app:fontFamily="@font/inter_500" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/transparent"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/rounded_tmr_layout"
                android:id="@+id/tomorrowLayout"
                android:foreground="?attr/selectableItemBackground"
                tools:ignore="UnusedAttribute">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/inter_500"
                    android:text="@string/tomorrow"
                    android:textColor="?attr/tomorrowTextColor"
                    app:fontFamily="@font/inter_500" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="12dp"
        android:background="?attr/separatorColor"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="12dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/secondaryText"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:text="@string/feb_2022"
            android:id="@+id/currentDisplayedMonth"
            android:fontFamily="@font/inter_500"
            app:fontFamily="@font/inter_500"
            android:lineSpacingExtra="0.025dp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_centerVertical="true"
            android:id="@+id/forwardBtnLayout"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_stroke_12r"
                android:id="@+id/forwardBtn"
                android:foreground="?attr/selectableItemBackground"
                >

                <ImageView
                    app:tint="?attr/primaryText"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/arrow_forward"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/forwardBtnLayout"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            >
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_stroke_12r"
                android:id="@+id/backwardBtn"
                android:foreground="?attr/selectableItemBackground"
                >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/arrow_back"
                    app:tint="?attr/primaryText"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:orientation="horizontal"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:id="@+id/titlesContainer"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="?attr/calendarHeaderTextColor"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="?attr/calendarHeaderTextColor"

            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="?attr/calendarHeaderTextColor"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="?attr/calendarHeaderTextColor"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="?attr/calendarHeaderTextColor"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="?attr/calendarHeaderTextColor"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="?attr/calendarHeaderTextColor"
            />


    </LinearLayout>
    <com.kizitonwose.calendar.view.CalendarView
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="307dp"
        app:cv_dayViewResource="@layout/calendar_day_layout"

        />
</LinearLayout>