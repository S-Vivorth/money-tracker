<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.wallet.InviteUserFrag"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/bgColor"
        android:id="@+id/searchResultLayout">
        <include layout="@layout/wallet_app_bar"
            android:id="@+id/appBar"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColorHint="@color/light_black_24"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_edittext_100r"
                android:paddingEnd="48dp"
                android:paddingStart="53dp"
                android:inputType="text"
                android:hint="@string/search_user"
                android:id="@+id/searchView"
                android:textColorHint="?attr/editTextHintTextColor"
                android:backgroundTint="?attr/searchBgColor"


                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@drawable/search"
                android:layout_marginStart="20dp"
                app:tint="?attr/primaryText"

                />
            <androidx.cardview.widget.CardView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:id="@+id/clearAllBtn"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/transparent"
                >

                <ImageView
                    android:id="@+id/crossIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:padding="4dp"
                    android:src="@drawable/cross"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    app:tint="?attr/editTextHintTextColor" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginTop="12dp"
            android:id="@+id/resultUserLayout"
            android:visibility="gone"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="50dp"
                android:layout_marginStart="24dp"
                android:layout_centerVertical="true"
                android:id="@+id/profileImgLayout"
                app:cardElevation="0dp"
                app:cardBackgroundColor="?attr/tertiaryBgColor"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/person"
                    android:id="@+id/profileImg"
                    android:scaleType="fitXY"
                    />

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/profileImgLayout"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/account_name"
                    style="@style/secondaryText"
                    android:id="@+id/userName"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    style="@style/tertiaryText"
                    android:textColor="?attr/greyTextColor"
                    android:id="@+id/userEmail"/>

            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                app:cardCornerRadius="42dp"
                app:cardBackgroundColor="@color/bgButton"
                app:cardElevation="0dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="24dp"
                android:id="@+id/inviteUserBtn"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/invite"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    style="@style/primaryText"
                    android:id="@+id/inviteText"
                    />
            </androidx.cardview.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="?attr/separatorColor"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/quinaryBgColor"
        android:layout_below="@id/searchResultLayout"/>

</RelativeLayout>