<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.paraga.moneytrackerdev.views.category.NewCategoryFrag"
    android:background="?attr/quaternaryBgColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:id="@+id/appBar"
        >
        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:id="@+id/backBtnLayout"
            android:background="?attr/selectableItemBackgroundBorderless"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/close"
                app:tint="?attr/primaryText" />
        </RelativeLayout>
        <TextView
            android:id="@+id/newOrEditCategoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_category"
            style="@style/primaryText"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/backBtnLayout"
            android:layout_centerVertical="true"
            android:fontFamily="@font/inter_500"
            app:fontFamily="@font/inter_500"

            />
        <androidx.cardview.widget.CardView
            android:layout_width="56dp"
            android:layout_height="32dp"
            app:cardCornerRadius="42dp"
            android:backgroundTint="?attr/statisticsSecondaryBgColor"
            app:cardElevation="0dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:id="@+id/deleteCategoryBtn"
            android:visibility="gone"
            android:foreground="?attr/selectableItemBackground"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/trash"
                android:backgroundTint="?attr/deleteIconColor"
                />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        app:cardCornerRadius="20dp"
        android:background="@color/grey"
        android:layout_marginTop="18dp"
        app:cardElevation="0dp"
        android:layout_below="@id/appBar"
        android:id="@+id/switchLayout"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:background="?attr/statisticsSecondaryBgColor"

            android:id="@+id/incomeExpenseLayout"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/transparent"
                android:id="@+id/incomeBtn"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:text="@string/income"
                    android:textSize="14sp"
                    android:id="@+id/incomeText"
                    android:textColor="?attr/unselectedIncomeExpenseTextColor"
                    android:fontFamily="@font/inter_500"
                    app:fontFamily="@font/inter_500"
                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/primaryRed"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                android:id="@+id/expenseBtn"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:text="@string/expense"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:id="@+id/expenseText"
                    android:fontFamily="@font/inter_500"
                    app:fontFamily="@font/inter_500"
                    />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_below="@id/switchLayout"
        android:layout_marginTop="16dp"
        android:id="@+id/categoryLayout"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="32dp"
            android:layout_centerVertical="true"
            android:id="@+id/iconLayout"
            android:layout_marginStart="12dp"
            app:cardBackgroundColor="?attr/statisticsSecondaryBgColor"
            >

            <ImageView
                android:padding="8dp"
                android:id="@+id/categoryIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_general"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/category"
            android:layout_toEndOf="@id/iconLayout"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            style="@style/primaryText"
            android:id="@+id/categoryNameEditText"
            android:textSize="20sp"
            android:textColorHint="@color/black_400"
            android:background="@drawable/plain_edittext"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_a_symbol"
        android:layout_below="@id/categoryLayout"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        style="@style/primaryText"
        android:id="@+id/chooseCategoryText"
        android:fontFamily="@font/inter_500"
        app:fontFamily="@font/inter_500"
        />
    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chooseCategoryText"
        android:layout_marginTop="12dp"
        android:layout_above="@id/saveBtnLayout"
        android:id="@+id/categoryGridView"
        android:numColumns="5"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:horizontalSpacing="20dp"
        android:verticalSpacing="18dp"
        android:listSelector="#00000000"
        android:scrollbarSize="0dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/saveBtnLayout"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/saveBtn"
            style="@style/Button"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/rounded_btn_states"
            android:stateListAnimator="@null"
            android:text="@string/save"
            tools:ignore="TouchTargetSizeCheck"
            android:layout_marginTop="24dp"
            android:textSize="14sp"
            android:fontFamily="@font/inter_500"
            app:fontFamily="@font/inter_500"
            android:textColor="@color/lightPrimaryTextColor"
            />
    </RelativeLayout>



</RelativeLayout>