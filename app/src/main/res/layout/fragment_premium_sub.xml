<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.premium.PremiumSubFrag"
    android:background="@color/primary_900"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/sliderLayout"
            android:layout_weight="1"
            >

            <ImageView
                android:foreground="?attr/selectableItemBackground"
                android:id="@+id/closeBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/close"
                app:tint="@color/white" />
            <TextView
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_80"
                android:text="@string/restore"
                android:layout_alignParentEnd="true"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginTop="2dp"
                android:id="@+id/restoreSubBtn"/>
            <io.paraga.moneytrackerdev.views.premium.PresentationViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/closeBtn"
                android:id="@+id/sliderViewPager"
                android:layout_above="@id/indicatorLayout"
                >

            </io.paraga.moneytrackerdev.views.premium.PresentationViewPager>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/indicatorLayout">
                <androidx.cardview.widget.CardView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="8dp"
                    android:id="@+id/firstIndicator"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="8dp"
                    android:id="@+id/secondIndicator"

                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="8dp"
                    android:id="@+id/thirdIndicator"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="8dp"
                    android:id="@+id/forthIndicator"

                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    app:cardCornerRadius="8dp"
                    android:id="@+id/fifthIndicator"
                    />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_weight="1"
            android:background="@drawable/rounded_premium_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/offersRecyclerView"
                android:layout_marginTop="24dp"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="29dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:cardCornerRadius="100dp"
                app:cardElevation="0dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:fontFamily="@font/inter_500"
                    app:fontFamily="@font/inter_500"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/continue_sub"
                    android:id="@+id/ctnSubBtn"
                    android:background="@drawable/rounded_btn_states"
                    style="@style/Button"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:stateListAnimator="@null"
                    android:enabled="false"

                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:gravity="bottom"
                android:textSize="9sp"
                android:textColor="?attr/secondaryGreyTextColor"
                android:paddingTop="4dp"
                android:paddingBottom="20dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/accept_policy_description"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>