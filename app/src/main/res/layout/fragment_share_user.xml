<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.wallet.ShareUserFrag"
    android:background="?attr/quaternaryBgColor"
    >

    <!-- TODO: Update blank fragment layout -->
    <include layout="@layout/wallet_app_bar"
        android:id="@+id/appBar"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appBar"
        android:id="@+id/sharedUserRecyclerView"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/inviteUserBtn"
            style="@style/Button"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="36dp"
            android:background="@drawable/rounded_btn_states"
            android:stateListAnimator="@null"
            android:text="@string/invite_user"
            tools:ignore="TouchTargetSizeCheck"
            android:fontFamily="@font/inter_500"
            app:fontFamily="@font/inter_500"/>
    </RelativeLayout>


</RelativeLayout>