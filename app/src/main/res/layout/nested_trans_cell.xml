<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?attr/selectableItemBackground"
    android:id="@+id/detailItem">
    <TextView
        android:id="@+id/text_category"
        app:fontFamily="@font/inter_500"
        android:fontFamily="@font/inter_500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category"
        android:lineSpacingExtra="3sp"
        android:textSize="14sp"
        android:letterSpacing="0.02"
        android:textColor="?attr/primaryText"
        android:layout_marginStart="14dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toEndOf="@+id/img_category"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/img_category"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/custom_checkbox"
        android:visibility="gone"
        android:clickable="false"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@+id/img_category"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <ImageView
        android:layout_marginTop="2dp"
        android:id="@+id/img_wallet"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toBottomOf="@+id/text_category"
        app:layout_constraintStart_toStartOf="@+id/text_category"/>
    <TextView
        android:ellipsize="end"
        android:layout_marginTop="2dp"
        android:id="@+id/text_wallet_name"
        style="@style/tertiaryText"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_400"
        android:text="@string/personal"
        android:textColor="@color/terity"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/img_wallet"
        app:layout_constraintTop_toBottomOf="@+id/text_category"/>
    <TextView
        android:id="@+id/text_remark"
        android:fontFamily="@font/inter_400"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/category"
        android:textSize="12sp"
        android:textColor="@color/terity"
        android:maxLines="2"
        android:ellipsize="end"
        android:lineHeight="@dimen/_16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_wallet_name"
        app:layout_constraintStart_toStartOf="@+id/img_wallet"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="4dp"/>
    <TextView
        android:fontFamily="@font/inter_500"
        app:fontFamily="@font/inter_500"
        android:id="@+id/text_trans_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hundred_dollar"
        android:textSize="14sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@+id/text_category"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:layout_marginTop="2dp"
        style="@style/primaryText"
        android:id="@+id/text_exchange"
        android:fontFamily="@font/inter_400"
        app:fontFamily="@font/inter_400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hundred_dollar"
        android:textSize="12sp"
        android:textColor="?attr/greyTextColor"
        app:layout_constraintTop_toBottomOf="@+id/text_trans_amount"
        app:layout_constraintEnd_toEndOf="@+id/text_trans_amount"

        />
</androidx.constraintlayout.widget.ConstraintLayout>