<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/dialog"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_your_support"
            style="@style/secondaryText"
            android:fontFamily="@font/inter_500"
            app:fontFamily="@font/inter_500"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:textColor="?attr/primaryText"/>
        <ImageView
            android:id="@+id/closeBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:src="@drawable/close"
            android:padding="8dp"
            app:tint="?attr/primaryText"
            android:background="?attr/selectableItemBackground"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/app_icon_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/app_icon_yellow" />
        <TextView
            android:id="@+id/text_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_500"
            android:text="@string/money_tracker_pro"
            android:textAlignment="center"
            android:textColor="?attr/primaryText"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/app_icon_yellow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <LinearLayout
            android:id="@+id/layout_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="106dp"
            android:layout_marginTop="4.4dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/text_money"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <ImageView
                android:id="@+id/img_start_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star" />

            <ImageView
                android:id="@+id/img_start_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star" />

            <ImageView
                android:id="@+id/img_start_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star" />

            <ImageView
                android:id="@+id/img_start_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star" />

            <ImageView
                android:id="@+id/img_start_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star" />
        </LinearLayout>
        <TextView
            android:id="@+id/text_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/inter_400"
            android:text="@string/if_you_enjoy_using_this_app_could_you_take_a_moment_to_rate_it_your_feedback_is_very_important_for_us"
            android:textAlignment="center"
            android:textColor="?attr/secondaryGreyTextColor"
            android:textSize="14sp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_star" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_marginTop="12dp"

        >
        <androidx.cardview.widget.CardView
            android:id="@+id/layout_rate_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="24dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="100dp"
            app:layout_constraintTop_toBottomOf="@+id/text_content">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rate_us"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_btn_states"
                android:text="@string/rate_us"
                android:textAllCaps="false"
                android:textColor="@color/primary_900"
                android:backgroundTint="@color/bgButton"
                android:letterSpacing="0.025"
                android:textSize="14sp"
                android:fontFamily="@font/inter_500"
                app:fontFamily="@font/inter_500"
                android:foreground="?attr/selectableItemBackground"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="24dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="100dp"
            android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_rate_us">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/do_not_like"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="?attr/bgColor"
                android:text="@string/don_t_like"
                android:textAllCaps="false"
                android:textColor="?attr/primaryText"
                android:letterSpacing="0.025"
                android:textSize="14sp"
                android:fontFamily="@font/inter_500"
                app:fontFamily="@font/inter_500"
                android:foreground="?attr/selectableItemBackground"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>